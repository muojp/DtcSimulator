<resources>
    <!-- Light Theme Colors - Material Design 3 compliant with WCAG AA contrast -->

    <!-- Primary colors (Blue-based for better color-blind accessibility) -->
    <color name="primary_light">#FF1976D2</color>          <!-- Blue 700 - Good contrast on white -->
    <color name="primary_variant_light">#FF0D47A1</color>  <!-- Blue 900 -->
    <color name="on_primary_light">#FFFFFFFF</color>       <!-- White text on primary -->

    <!-- Secondary colors (Orange-based for distinction from primary) -->
    <color name="secondary_light">#FFFF6F00</color>        <!-- Orange 900 - Accessible -->
    <color name="secondary_variant_light">#FFE65100</color><!-- Deep Orange 900 -->
    <color name="on_secondary_light">#FFFFFFFF</color>     <!-- White text on secondary -->

    <!-- Background colors -->
    <color name="background_light">#FFFAFAFA</color>       <!-- Very light gray -->
    <color name="surface_light">#FFFFFFFF</color>          <!-- White -->
    <color name="on_background_light">#FF212121</color>    <!-- Dark gray text -->
    <color name="on_surface_light">#FF212121</color>       <!-- Dark gray text -->

    <!-- Error colors -->
    <color name="error_light">#FFD32F2F</color>            <!-- Red 700 -->
    <color name="on_error_light">#FFFFFFFF</color>         <!-- White text -->

    <!-- Semantic colors for status indication -->
    <color name="success_light">#FF388E3C</color>          <!-- Green 700 -->
    <color name="warning_light">#FFF57C00</color>          <!-- Orange 700 -->
    <color name="info_light">#FF1976D2</color>             <!-- Blue 700 -->

    <!-- Surface variants -->
    <color name="surface_variant_light">#FFF5F5F5</color>  <!-- Light gray for cards -->
    <color name="on_surface_variant_light">#FF757575</color><!-- Gray text on surface -->

    <!-- Outline and dividers -->
    <color name="outline_light">#FFE0E0E0</color>          <!-- Light gray outline -->
    <color name="divider_light">#FFE0E0E0</color>          <!-- Light gray divider -->

    <!-- Badge colors with high contrast -->
    <color name="badge_background_light">#FF0D47A1</color> <!-- Blue 900 -->
    <color name="badge_text_light">#FFFFFFFF</color>       <!-- White -->

    <!-- Legacy colors (kept for compatibility) -->
